@model Online_Laundry_Management_System.Models.InvoiceIn
@{
    ViewBag.Title = "New Invoice";
}
<div class="page-header">
    <h3 class="page-title"> Add Customer </h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">New Invoice</li>
        </ol>
    </nav>
</div>
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">
                    New Invoice
                </h4>
                <form class="forms-sample" method="post">
                    @using (Html.BeginForm())
                    {
                        <div class="form-group">
                            <label for="exampleInputUsername1">Customer</label>
                            @Html.DropDownList("CustomerId", ViewBag.Customers as List<SelectListItem>, "-- Select Customer --", new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Invoice Type</label>
                            @Html.DropDownList("InvoiceTypeId", ViewBag.InvoiceTypes as List<SelectListItem>, "-- Select Invoice Type --", new { @class = "form-control" })
                        </div>
                        <div class="form-group" id="amountField" style="display: none;">
                            <label for="Amount">Amount</label>
                            @Html.TextBoxFor(model => model.Amount, new { @class = "form-control", placeholder = "Enter Amount" })
                        </div>
                        <button type="submit" class="btn btn-success me-2">Add</button>
                        <a class="btn btn-danger" href="@Url.Action("Index","Home")">Cancel</a>
                    }
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#InvoiceTypeId').change(function () {
            if ($(this).val() == 1 || $(this).val() == 2) {
                $('#amountField').show();
            } else {
                $('#amountField').hide();
            }
        });
    });
</script>